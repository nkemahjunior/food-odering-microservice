<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.3</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.zeco</groupId>
    <artifactId>zeco-eats-backend</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>zeco-eats-backend</name>
    <description>ZecoEats: order food from any restaurant and get it delivered to you</description>
    <packaging>pom</packaging>

    <modules>
        <module>userManagement</module>
        <module>restaurants</module>
        <module>configServer</module>
        <module>deliveries</module>
        <module>sharedDTO</module>
    </modules>


    <properties>

        <awsS3.version>2.27.21</awsS3.version>
        <aws-crt.version>0.30.11</aws-crt.version>
        <firebase.admin.version>9.3.0</firebase.admin.version>
        <hibernate.spatial.version>7.0.0.Alpha3</hibernate.spatial.version>
        <shared.version>1.0-SNAPSHOT</shared.version> <!--installed in your local repository-->
        <spring-cloud.version>2023.0.3</spring-cloud.version>
        <spring-retry.version>2.0.8</spring-retry.version>


        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!-- https://mvnrepository.com/artifact/software.amazon.awssdk/s3 -->
            <dependency>
                <groupId>software.amazon.awssdk</groupId>
                <artifactId>s3</artifactId>
                <version>${awsS3.version}</version>

            </dependency>
            <!-- https://mvnrepository.com/artifact/software.amazon.awssdk.crt/aws-crt -->
            <dependency>
                <groupId>software.amazon.awssdk.crt</groupId>
                <artifactId>aws-crt</artifactId>
                <version>${aws-crt.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>com.zeco.shared</groupId>
                <artifactId>sharedDTO</artifactId>
                <version>${shared.version}</version>
            </dependency>

            <!-- https://mvnrepository.com/artifact/org.springframework.retry/spring-retry -->
            <dependency>
                <groupId>org.springframework.retry</groupId>
                <artifactId>spring-retry</artifactId>
                <version>${spring-retry.version}</version>
            </dependency>



            <!-- https://mvnrepository.com/artifact/com.google.firebase/firebase-admin -->
            <dependency>
                <groupId>com.google.firebase</groupId>
                <artifactId>firebase-admin</artifactId>
                <version>${firebase.admin.version}</version>
            </dependency>

            <!-- https://mvnrepository.com/artifact/org.hibernate.orm/hibernate-spatial -->
            <dependency>
                <groupId>org.hibernate.orm</groupId>
                <artifactId>hibernate-spatial</artifactId>
                <version>${hibernate.spatial.version}</version>
            </dependency>

        </dependencies>


    </dependencyManagement>




</project>